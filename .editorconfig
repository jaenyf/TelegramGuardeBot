# EditorConfig : https://EditorConfig.org

# top-most EditorConfig file
root = true

# global setup
[*]
end_of_line = lf
charset = utf-8

# code files setup
[*.php]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
indent_brace_style = allman
spaces_around_brackets = both
quote_type = single
insert_final_newline = true
